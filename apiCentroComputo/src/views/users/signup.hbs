
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Registrar Cuenta</h3>
            </div>
            <div class="card-body">
                <form action="/api/auth/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{nombre}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="apellidos" placeholder="Apellidos" value="{{apellidos}}">
                    </div>
                    

                    <div class="form-group">
                        <label for="tipo">Tipo Usuario:</label>
                        <select id="tipousuario" name="tipousuario" class="form-control form-control-sm" size="valoresvisibles" >
                            <option>estudiante</option>
                            <option>academico</option>
                            <option>auxiliartecnico</option>
                            <option>tecnicoacademico</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="matricula" placeholder="Matricula" value="{{matricula}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="correo" placeholder="Email" value="{{correo}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="usuario" placeholder="usuario" value="{{usuario}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña">
                    </div>
                    
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar Contraseña">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
