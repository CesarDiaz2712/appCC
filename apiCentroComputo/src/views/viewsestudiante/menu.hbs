    <script>
        const btn = document.querySelector('#menu-btn');
        const menu = document.querySelector('#sidemenu');
        btn.addEventListener('click', e =>{
            menu.classList.toggle("menu-expanded");
            menu.classList.toggle("menu-collapsed");

            document.querySelector('body').classList.toggle('body-expanded');
        });
    </script>
    
</div>

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Registrar Prestamo</h3>
        </div>

        <div class="card-body">
            <form action="/registrar-prestamo/new-prestamo" method="POST">
                <div class="form-group">
                    <label for="tipo">Fecha Prestamo:</label>

                    <div class="form-group">
                        <input type="date" id="fechaPrestamo" name="fechaPrestamo"/>
                    </div>

                    
                    <label for="tipo">Experiencia Educativa:</label>

                    <div class="form-group">
                        <input type="text" id="experiencia" name="experiencia"/>
                    </div>

                    <label for="tipo">Horario de clases:</label>

                    <div class="form-group">
                        <input type="text" id="horario" name="horario"/>
                    </div>

                    <label for="tipo">Salon:</label>

                    <div class="form-group">
                        <select id="salon" name="salon" size="valoresvisibles">
                            <option>CC1</option>
                            <option>CC2</option>
                            <option>CC3</option>
                            <option>CC4</option>
                        </select>
                    </div>

                    <label for="tipo">Matricula solicitante:</label>

                    <div class="form-group">
                        <input type="text" id="solicitante" name="solicitante"/>
                    </div>

                    <label for="tipo">Equipo:</label>

                    <div class="form-group">
                        <select id="equipo" name="equipo" size="valoresvisibles">
                            <option>A1</option>
                            <option>A2</option>
                            <option>A3</option>
                            <option>A4</option>
                        </select>
                    </div>
                    


                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Registrar
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>