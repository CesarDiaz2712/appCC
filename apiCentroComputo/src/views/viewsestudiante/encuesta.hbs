{{#each errors }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each}}

<div id="sidemenu" class="menu-collapsed">
    
    <!--HEADER-->
    <div id="header">
        <div id="title"><span>Sistema del Centro de Computo</span></div>
        <div id="menu-btn">
            <div class="btn-hamburger"></div>
            <div class="btn-hamburger"></div>
            <div class="btn-hamburger"></div>

        </div>
    </div>

    <!--PROFILE-->
    <div id="profile">
        <div id="photo"><img src="img/profile.png" alt=""></div>
        <div id="usuario"> <span>Matricula</span></div>
    </div>

    <!--ITEMS-->
    <div id="menu-items">
        <div class="item">
            <a href="/student/registrar-prestamo">
                <div class="icon"><img id="btn-reservaccion" src="img/icons-navegation/reservacion.png" alt=""></div>
                <div class="title"><span>Registrar Prestamo</span></div>
            </a>
        </div>
        
        <div class="item separator">
        </div>

        <div class="item">
            <a href="/encuestaest">
                <div class="icon"><img id="btn-encuesta" src="img/icons-navegation/encuesta.png" alt=""></div>
                <div class="title"><span>Encuesta Satisfacción</span></div>
            </a>
        </div>
    </div>

    <script>
        const btn = document.querySelector('#menu-btn');
        const menu = document.querySelector('#sidemenu');
        btn.addEventListener('click', e =>{
            menu.classList.toggle("menu-expanded");
            menu.classList.toggle("menu-collapsed");

            document.querySelector('body').classList.toggle('body-expanded');
        });
    </script>

</div>

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Encuesta Satisfaccion</h3>
        </div>

        <div class="card-body">
            <form action="/encuesta/new-encuesta" method="POST">
                <div class="form-group">
                    <label for="tipo">¿Ha usado el sistema de centro de computo?</label>

                    <div class="form-group">
                        <input type="radio" id="pregunta1si" value="si" name="pregunta1"/>Si
                        <input type="radio" id="pregunta1no" value="no" name="pregunta1"/>No
                    </div>

                    
                    <label for="tipo">¿Ha tenido problemas utilizando la app?</label>

                    <div class="form-group">
                        <input type="radio" id="pregunta2si" value="si" name="pregunta2"/>Si
                        <input type="radio" id="pregunta2no" value="no" name="pregunta2"/>No
                    </div>

                    <div class="form-group">
                        <input type="text" name="respuesta2" class="form-control" placeholder="">
                    </div>

                    
                    <label for="tipo">¿Al usar la app como ha sido su experiencia?</label>

                    <div class="form-group">
                        <textarea rows="3" cols="50" class="form-control" name="comentario"></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Enviar
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
